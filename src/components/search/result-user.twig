{#
Arguments:
    - __name : string
        Le nom de l'utilisateur
    - __class : string
        La classe de l'utilisateur
    - __location : string
        Le lieu de l'utilisateur
    - __link : string
        Le lien vers la page de l'utilisateur
    - __icon : string
        L'icône à afficher
    - __iconText : string
        Le texte alternatif de l'icône
#}

{% if not __icon or not __iconText %}
	{#
	    {% set __icon = "fa-building" %}
	    #}
	{% set __iconText = __name %}
{% endif %}

{% include "search/result.twig" with {
    __title: __name,
    __subtitle: __class,
    __description: __location,
    __icon: __icon,
    __iconText: __iconText,
    __link: "/student/" ~ __link
} %}
