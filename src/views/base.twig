{% block assets %}
	{{ addCSS(['css/colors.css', 'css/base.css', "css/normalize.css"]) }}
	{{ addJS('js/base.js') }}
{% endblock %}


<html>
	<head>
		<meta charset="utf-8">
		<title>
			{% block title %}{% endblock %}
			-
			{{ config.get('APP_NAME') }}
		</title>
	</head>
	<body>
		{% include "header.twig" %}
		<main>
			{% block content %}{% endblock %}
		</main>
		{% include 'footer.twig' %}
	</body>
</html>

{{ assets({files: getCSS(), name: (getName() ~ '.css')}) }}
{{ assets({files: getJS(), name: (getName() ~ '.js')}) }}
